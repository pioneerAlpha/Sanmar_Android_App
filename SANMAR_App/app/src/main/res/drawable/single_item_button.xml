<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="12dp"
                />
            <gradient
                android:startColor="#E8D2AE"
                android:endColor="#DCC39E"
                android:angle="-90"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="12dp"
                />
            <gradient
                android:startColor="#DCC297"
                android:endColor="#AF8647"
                android:angle="90"
                />
        </shape>
    </item>

</selector>