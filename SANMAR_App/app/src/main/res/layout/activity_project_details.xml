<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EFE7"
    tools:context=".ProjectDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/image_details"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@drawable/details_item_image"
        />

        <TextView
            android:id="@+id/name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textSize="30dp"
            android:textColor="#5C3803"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/address_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="#626667"
            />

        <TextView
            android:id="@+id/category_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textColor="#5C3803"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/description_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:text="Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit. Loerm impsum doller amit."
            android:justificationMode="inter_word"
            />
    </LinearLayout>
</ScrollView>
